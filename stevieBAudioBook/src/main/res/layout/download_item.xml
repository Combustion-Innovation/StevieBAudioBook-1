<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/di_missing_item_holder"
    android:layout_width="fill_parent"
    android:layout_height="80dp"
    android:gravity="end|center_vertical"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/di_missing_chapter_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="30dp"
        android:text="Chapter #"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/di_missing_chapter_checkbox_holder"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="10dp"
        android:gravity="right|center_vertical" >

        <CheckBox
            android:id="@+id/di_missing_chapter_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:button="@drawable/custom_checkbox_circle" />
    </LinearLayout>
</LinearLayout>